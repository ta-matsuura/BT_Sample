<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="20dp"
              android:scrollbarAlwaysDrawVerticalTrack="true">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:id="@+id/textView"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INIT"
            android:id="@+id/text_status"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView"
            android:layout_marginLeft="10dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan"
            android:id="@+id/btn_scan"
            android:layout_marginTop="10dp"
            android:layout_below="@id/textView"
			android:layout_alignLeft="@id/textView"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:id="@+id/btn_connect"
            android:layout_alignTop="@id/btn_scan"
            android:layout_toRightOf="@id/btn_scan"/> 
 
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disconnect"
            android:id="@+id/btn_disconnect"
            android:layout_alignTop="@id/btn_scan"
            android:layout_toRightOf="@id/btn_connect"/> 
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notify"
            android:id="@+id/btn_notifi"
            android:layout_alignTop="@id/btn_scan"
            android:layout_toRightOf="@id/btn_disconnect"/> 
   	<ImageView
		android:src="@android:drawable/divider_horizontal_textfield"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
   	    android:id="@+id/divider1"
		android:layout_width="fill_parent"
		android:layout_height="3dip"
		android:scaleType="fitXY"
		android:gravity="fill_horizontal"
		android:layout_below="@id/btn_connect"/>
   	
    <EditText
        android:id="@+id/editor1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider1"
        android:text="Hello" />	
    <Button
        android:id="@+id/btn_write"
        android:onClick="onClickWriteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write"
        android:layout_below="@id/editor1"/> 

   	<ImageView
   	    android:id="@+id/divider2"
		android:layout_width="fill_parent"
		android:layout_height="3dip"
		android:src="@android:drawable/divider_horizontal_textfield"
		android:scaleType="fitXY"
		android:gravity="fill_horizontal"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
		android:layout_below="@id/btn_write"/> 
   	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Result : "
        android:id="@+id/read_title"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/divider2"/>   	
   	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="none"
        android:id="@+id/read_result"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/read_title"
        android:layout_below="@id/divider2"/>
    <Button
        android:id="@+id/btn_read"
        android:onClick="onClickReadButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read"
        android:layout_below="@id/read_title"/> 	
   	<ImageView
   	    android:id="@+id/divider3"
		android:layout_width="fill_parent"
		android:layout_height="3dip"
		android:src="@android:drawable/divider_horizontal_textfield"
		android:scaleType="fitXY"
		android:gravity="fill_horizontal"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
		android:layout_below="@id/btn_read"/>
   	<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MTU Req(API21以上で利用可) : "
        android:id="@+id/mtu_title"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/divider3"/>   	
   	<EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:inputType="number"
        android:id="@+id/mtu_value"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/mtu_title"
        android:layout_below="@id/divider3"/>
    <Button
        android:id="@+id/btn_mtu_request"
        android:onClick="onClickRequestMtu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request MTU"
        android:layout_below="@id/mtu_value"/> 	
        
     <ImageView
		android:src="@android:drawable/divider_horizontal_textfield"
		android:layout_marginTop="20dp"
		android:layout_marginBottom="20dp"
   	    android:id="@+id/divider4"
		android:layout_width="fill_parent"
		android:layout_height="3dip"
		android:scaleType="fitXY"
		android:gravity="fill_horizontal"
		android:layout_below="@id/btn_mtu_request"/>
   	
    <EditText
        android:id="@+id/editor2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider4"
        android:text="とにかく長いデータをここに書いてみて、writeしてみて。すずきたおう 080-1111-2222 test@test.com" />	
    <Button
        android:id="@+id/btn_write2"
        android:onClick="onClickWriteButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Write"
        android:layout_below="@id/editor2"/> 

</RelativeLayout>
</ScrollView>